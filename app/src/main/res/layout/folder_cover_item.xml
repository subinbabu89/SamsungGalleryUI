<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/thumbnail_height"
    android:layout_centerInParent="true"
    android:layout_margin="@dimen/measurement_5dp"
    card_view:cardCornerRadius="@dimen/measurement_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgv_cover_foldercover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/default_content_description_for_imageviews"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/txtv_cover_foldername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/fileLabelBG"
            android:padding="@dimen/measurement_10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/folder_name_text_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
