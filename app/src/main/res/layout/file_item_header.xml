<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tlbr_back"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/imgv_get_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/measurement_15dp"
            android:contentDescription="@string/default_content_description_for_imageviews"
            android:padding="@dimen/measurement_10dp"
            android:src="@drawable/ic_menu_back"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <View
        android:id="@+id/view_dropshadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/measurement_5dp"
        android:background="@drawable/dropshadow" />
</LinearLayout>